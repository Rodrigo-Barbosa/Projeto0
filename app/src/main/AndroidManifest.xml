<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rodrigo.projeto0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="sugar_example2.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.rodrigo.projeto0" />

        <activity
            android:name=".modelo.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.rodrigo.projeto0.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cadastro.CadastrarUsuario"
            android:label="@string/title_activity_novo_usuario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".util.UsuarioAutenticado"
            android:label="@string/title_activity_usuario_logado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".util.ListaProdutos"
            android:label="@string/title_activity_lista_objetos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cadastro.CadastrarProduto"
            android:label="@string/title_activity_cadastrar_novo_objeto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".util.ListaUsuarios"
            android:label="@string/title_activity_lista_usuarios"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".util.RecuperaSenha"
            android:label="@string/title_activity_esqueceu_senha"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".util.VerificaStatus"
            android:label="@string/title_activity_verifica_status"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>