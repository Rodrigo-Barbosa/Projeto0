<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".util.UsuarioAutenticado"
    tools:showIn="@layout/activity_usuario_autenticado"
    android:background="@drawable/fundorocha"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCadastrarProduto"
            android:id="@+id/ibtnNovoProduto"
            android:onClick="cadastrarProduto"
            android:background="@drawable/cadastroproduto"
            android:gravity="left"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCadastrarProduto"
            android:id="@+id/ibtnVerificarStatus"
            android:onClick="verificarStatus"
            android:background="@drawable/listaprodutos"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCadastrarProduto"
            android:id="@+id/ibtnExibirLista"
            android:onClick="exibirLista"
            android:background="@drawable/verificastatus"
            android:gravity="right"/>

    </LinearLayout>


</LinearLayout>
